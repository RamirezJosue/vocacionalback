                                          tr
                                            td(align='center', style='border-collapse:collapse;')
                                              table(border='0', cellpadding='0', cellspacing='0', style='padding-bottom:10px;')
                                                tbody
                                                  tr(align='center')
                                                    td(align='center', valign='middle', style='border-collapse:collapse;')
                                                      a.buttonText(href='#', target='_blank', style='color: #4A90E2;text-decoration: none;font-weight: normal;display: block;border: 2px solid #585858;padding: 10px 80px;font-family: Arial;') Verificar

                                      // // End Template Header \\
                          tr
                            td(align='center', valign='top', style='border-collapse:collapse;')
                              // // Begin Template Body \\
                              table#templateBody(border='0', cellpadding='0', cellspacing='0', width='450')
                                tbody
                                  tr
                                    td.bodyContent(valign='top', style='border-collapse:collapse;background-color:#FFFFFF;')
                                      // // Begin Module: Standard Content \\
                                      table(border='0', cellpadding='20', cellspacing='0', width='100%', style='padding-bottom:10px;')
                                        tbody
                                          tr
                                            td.mainContainer(valign='top', style='padding-bottom:1rem;border-collapse:collapse;')
